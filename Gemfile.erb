source 'https://rubygems.org'
ruby '<%= RUBY_VERSION %>'

gem 'rails', '<%= RAILS_VERSION %>'
gem 'bcrypt'
gem 'pg'
gem 'puma'
gem 'rack-cors'
gem 'sentry-raven'

group :development, :test do
  gem 'byebug'
  gem 'dotenv-rails'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'pry-byebug'
  gem 'pry-rails'
  gem 'rspec-rails'
end

group :development do
  gem 'better_errors'
  gem 'bullet'
  gem 'bundler-audit'
  gem 'listen'
  gem 'rubocop'
  gem 'spring'
  gem 'spring-watcher-listen'
end

group :test do
  gem 'codecov', require: false
  gem 'database_cleaner'
  gem 'shoulda-callback-matchers'
  gem 'shoulda-matchers'
  gem 'simplecov'
  gem 'timecop'
end
