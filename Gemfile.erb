source 'https://rubygems.org'
ruby '<%= RUBY_VERSION %>'

gem 'rails', '<%= RAILS_VERSION %>'
gem 'autoprefixer-rails'
gem 'newrelic_rpm'
gem 'pg'
gem 'rack-canonical-host'
gem 'rack-timeout'
gem 'simple_form'
gem 'puma'
gem 'uglifier'
gem 'jquery-rails'
gem 'react-rails'
gem 'bootstrap-sass'
gem 'sassc-rails'
gem 'airbrake', '4.1.0'
gem 'secure_headers'

group :development do
  gem 'dotenv-rails'
  gem 'pry-rails'
  gem 'byebug'
  gem 'bullet'
  gem 'bundler-audit'
  gem 'spring'
  gem 'web-console'
  gem 'quiet_assets'
  gem 'rubocop'
  gem 'better_errors'
end

group :test do
  gem 'capybara'
  gem 'poltergeist'
  gem 'factory_girl'
  gem 'formulaic'
  gem 'rspec-rails'
  gem 'rspec-mocks'
  gem 'shoulda-matchers'
  gem 'timecop-console', require: 'timecop_console'
  gem 'database_cleaner'
  gem 'simplecov'
end

group :production, :staging do
  gem 'rails_12factor'
  gem 'rails_stdout_logging'
  gem 'rails_serve_static_assets'
end
